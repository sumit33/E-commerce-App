<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="10dp">

            <ImageView
                android:id="@+id/proImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/proName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/proImage"
                android:text="Swiggy"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/proCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proName"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/proImage"
                android:text="Food and Drinks "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/offerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/proImage"
                android:layout_marginTop="5dp"
                android:text="We are giving the best ofers for you!!"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/cashImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/offerDetails"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/cash" />

            <TextView
                android:id="@+id/cdOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/offerDetails"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/cashImg"
                android:text="Upto 20% Cd cashback avialable"
                android:textAllCaps="true"
                android:textColor="#006920" />

            <TextView
                android:id="@+id/success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cdOffer"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="80% Succeeded"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cdOffer"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="342 Uses Today"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/varify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cdOffer"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:text="Vairfied Offer"
                android:textColor="#08FF30"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/tik"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/cdOffer"
                android:layout_marginTop="15dp"
                android:layout_toStartOf="@+id/varify"
                android:src="@drawable/ic_check" />

            <TextView
                android:id="@+id/editors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:text="Editor's Pick"
                android:textColor="#FF7711"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/star"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/editors"
                android:src="@drawable/ic_star" />

        </RelativeLayout>
</android.support.v7.widget.CardView>
